<div class="control-group">
  <label class="control-label" for="<%= label %>"><%= defined?(label_text) ? label_text : label %></label>
  <div class="controls">
    <% if value === :file %>
        <%= file_field_tag label %>
    <% else %>
        <input type="text" name="<%= label %>" value="<%= value.to_s %>"></input>
    <% end %>
  </div>
</div>
