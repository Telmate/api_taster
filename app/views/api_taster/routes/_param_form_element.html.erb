<div class="control-group">
  <label class="control-label" for="<%= label %>"><%= defined?(label_text) ? label_text : label %></label>
  <div class="controls">
    <%=
      case value
        when :file
          file_field_tag label
        when :textarea
          text_area_tag label
        when :password
          password_field_tag label
        else
          text_field_tag label, value.to_s
      end
    %>

    <div class="btn-group" style='margin-right:10px;'>
      <div class='btn btn-danger btn-mini' onclick="$(this).closest('.control-group').remove();">Remove Parameter</div>
      <div class='btn btn-danger btn-mini'> <i class='icon-white icon-trash'>&nbsp;</i></div>
    </div>
  </div>
</div>
